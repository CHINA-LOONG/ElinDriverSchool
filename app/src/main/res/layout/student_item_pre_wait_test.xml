<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/marginTop"
    android:orientation="horizontal">
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1.6"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/imv_stu_item_pre_wait_test_head"
            android:layout_width="60dp"
            android:layout_height="75dp"
            android:scaleType="centerCrop"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:maxHeight="75dp"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="6"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/marginLeft"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tv_stu_item_pre_wait_test_name"
                android:layout_width="0dp"
                android:layout_weight="1.1"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_nomal"
                android:textSize="@dimen/text_small_size"
                />

            <RelativeLayout
                android:id="@+id/rl_stu_item_pre_wait_test_phone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_stu_phone"
                />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tv_stu_item_pre_wait_test_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_small_size"
                    android:gravity="end"
                    android:textColor="@color/text_color_nomal"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <TextView
                android:id="@+id/tv_stu_item_pre_wait_test_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_nomal"
                android:textSize="@dimen/text_small_size"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_nomal"
                android:textSize="@dimen/text_small_size"
                android:text="考试场地："
                />
            <TextView
                android:id="@+id/tv_stu_item_pre_wait_test_site"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_nomal"
                android:textSize="@dimen/text_small_size"
                android:text=""
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="乘坐班车："
                android:textSize="@dimen/text_small_size"
                android:textColor="@color/text_color_nomal"
                />
            <TextView
                android:id="@+id/tv_stu_item_pre_wait_test_take_bus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_small_size"
                android:textColor="@color/text_color_nomal"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/item_tv_cancle_appointment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="取消预约"
            android:textSize="16sp"
            android:textColor="@drawable/text_press_preview"
            android:gravity="end"
            android:paddingRight="16dp"/>
    </LinearLayout>

</LinearLayout>