<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1.6"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/imv_appoint_stu_portrait"
            android:layout_width="60dp"
            android:layout_height="75dp"
            android:scaleType="fitXY"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:maxHeight="75dp"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_appoint_stu_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="詹姆哈哈"
                android:textColor="@color/text_color_nomal"
                android:textSize="@dimen/text_small_size"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/img_appoint_stu_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_stu_phone"
                    android:layout_marginLeft="5dp" />
                <TextView
                    android:id="@+id/tv_appoint_stu_idnum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="371312198809208766"
                    android:textSize="@dimen/text_small_size"
                    android:gravity="end"
                    android:textIsSelectable="true"
                    android:textColor="@color/text_color_nomal"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_appoint_stu_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_nomal"
                android:textSize="@dimen/text_small_size"
                android:text="预约时间：2016-11-10"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_nomal"
                android:textSize="@dimen/text_small_size"
                android:text="预约状态："
                />
            <TextView
                android:id="@+id/tv_appoint_stu_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_nomal"
                android:textSize="@dimen/text_small_size"
                android:text="预约中" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">
            <TextView
                android:id="@+id/item_tv_cancle_appoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 可取消"
                android:gravity="end"
                android:paddingRight="30dp"
                android:textColor="@drawable/text_press_preview"
                android:visibility="visible"/>
            <Button
                android:id="@+id/item_btn_sign"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/select_register_btn"
                android:text="签到"
                android:visibility="gone"
                android:textColor="@color/white"/>
            <ImageView
                android:id="@+id/item_iv_signed_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_signed_in"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>