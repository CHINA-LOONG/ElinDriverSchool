<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="35dp">

    <TextView
        android:id="@+id/tv_time_start"
        android:layout_width="44dp"
        android:layout_height="24dp"
        android:layout_marginStart="14dp"
        android:layout_marginLeft="14dp"
        android:background="@drawable/bg_text_course"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="#333333"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="08:00" />

    <View
        android:id="@+id/view6"
        android:layout_width="5dp"
        android:layout_height="1dp"
        android:background="#111111"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_time_end"
        app:layout_constraintStart_toEndOf="@+id/tv_time_start"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_time_end"
        android:layout_width="44dp"
        android:layout_height="24dp"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp"
        android:background="@drawable/bg_text_course"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="#333333"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_time_start"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="08:00" />

    <TextView
        android:id="@+id/tv_subject"
        android:layout_width="62dp"
        android:layout_height="24dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/bg_text_course"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="#333333"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_time_end"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="科二科三" />

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="44dp"
        android:layout_height="24dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/bg_text_course"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="#333333"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_subject"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="20人" />

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="44dp"
        android:layout_height="24dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/bg_text_course"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="#333333"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_number"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="不限" />

    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="31dp"
        android:layout_height="32dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sz_sc" />
</android.support.constraint.ConstraintLayout>