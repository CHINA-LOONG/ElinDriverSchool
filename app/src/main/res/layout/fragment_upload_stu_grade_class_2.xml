<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_upload_grade_class_2_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <com.chanven.lib.cptr.PtrClassicFrameLayout
        xmlns:cube_ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ptr_view_upload_grade_class_2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#f0f0f0"
        cube_ptr:ptr_duration_to_close="200"
        cube_ptr:ptr_duration_to_close_header="700"
        cube_ptr:ptr_keep_header_when_refresh="true"
        cube_ptr:ptr_pull_to_fresh="false"
        cube_ptr:ptr_ratio_of_header_height_to_refresh="1.2"
        cube_ptr:ptr_resistance="1.8" >

        <ListView
            android:id="@+id/lv_upload_grade_class_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:dividerHeight="@dimen/line_height"
            android:divider="@color/line_color_gray"
            android:scrollbars="none"
            >
        </ListView>

    </com.chanven.lib.cptr.PtrClassicFrameLayout>
    <LinearLayout
        android:id="@+id/ll_upload_grade_class_2_bottom"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/marginTop"
        android:orientation="vertical"
        android:gravity="center"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/paddingTop"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="考试成绩："
                android:textColor="@color/text_color_nomal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="@dimen/paddingTop"
                />
            <RadioGroup
                android:id="@+id/rg_upload_grade_class_2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >
                <RadioButton
                    android:id="@+id/rb_upload_grade_class_2_qualified"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="合格"
                    android:textColor="@color/text_color_upload_grade_slector"
                    android:background="@drawable/upload_grade_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/paddingTop"
                    />
                <RadioButton
                    android:id="@+id/rb_upload_grade_class_2_unqualified"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="不合格"
                    android:button="@null"
                    android:gravity="center"
                    android:textColor="@color/text_color_upload_grade_slector"
                    android:background="@drawable/upload_grade_selector"
                    android:layout_marginRight="@dimen/paddingTop"
                    />
                <RadioButton
                    android:id="@+id/rb_upload_grade_class_2_no_test"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="未考试"
                    android:button="@null"
                    android:gravity="center"
                    android:textColor="@color/text_color_upload_grade_slector"
                    android:background="@drawable/upload_grade_selector"
                    />
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_nomal"
                android:text="考试日期："
                />
            <TextView
                android:id="@+id/tv_upload_grade_2_test_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_nomal"
                android:paddingLeft="@dimen/marginLeft"
                android:paddingRight="@dimen/marginLeft"
                android:background="@drawable/text_shape_white"
                android:paddingBottom="@dimen/paddingTop"
                android:paddingTop="@dimen/paddingTop"
                android:hint="请选择考试日期"
                android:textColorHint="@color/text_gray"
                />
        </LinearLayout>

        <Button
            android:id="@+id/btn_upload_grade_class_2_submit"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_centerHorizontal="true"
            android:text="提交成绩"
            android:background="@drawable/select_register_btn"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/marginTop"
            />
    </LinearLayout>
    </LinearLayout>

    <include android:id="@+id/ll_upload_grade_class_2_no_data"
        layout="@layout/layout_bg_nodata"
        android:visibility="gone"
        />

</LinearLayout>