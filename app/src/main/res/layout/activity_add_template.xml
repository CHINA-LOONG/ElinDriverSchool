<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.elin.elindriverschool.activity.AddTemplateActivity">
    <include layout="@layout/custom_go_back"
        android:id="@+id/title_add_template_time"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">
        <LinearLayout
            android:id="@+id/ll_add_template_time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="模板名称："
                android:textSize="16sp"/>
            <EditText
                android:id="@+id/edt_template_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:imeOptions="actionDone"
                android:nextFocusForward="@+id/item_edt_person_limit"
                android:textColor="@color/text_color_light_dark"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人数限制："
                android:textSize="16sp" />
            <EditText
                android:id="@+id/edt_person_limit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="2"
                android:text="4"
                android:inputType="number"
                android:singleLine="true"
                android:imeOptions="actionDone"
                android:textColor="@color/text_color_light_dark" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开始时间："
                android:textSize="16sp" />
            <TextView
                android:id="@+id/tv_time_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点击设置"
                android:textSize="16sp"
                android:textColor="@drawable/select_text_press" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="结束时间："
                android:textSize="16sp" />
            <TextView
                android:id="@+id/tv_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点击设置"
                android:textSize="16sp"
                android:textColor="@drawable/select_text_press" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:gravity="center|left"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="科目设置："
            android:textSize="16sp" />
        <RadioGroup
            android:id="@+id/rg_add_template"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rb_template_sub"
                style="@style/rbSubSelect"
                android:text="科目二"
                android:checked="true"/>
            <!--<RadioButton-->
                <!--android:id="@+id/rb_template_sub_two"-->
                <!--style="@style/rbSubSelect"-->
                <!--android:text="科目二"-->
                <!--android:checked="true"/>-->
            <!--<RadioButton-->
                <!--android:id="@+id/rb_template_sub_three"-->
                <!--style="@style/rbSubSelect"-->
                <!--android:text="科目三"-->
                <!--android:layout_marginLeft="20dp" />-->
            <!--<RadioButton-->
                <!--android:id="@+id/rb_template_sub_five"-->
                <!--style="@style/rbSubSelect"-->
                <!--android:text="科二和科三"-->
                <!--android:layout_marginLeft="20dp" />-->
        </RadioGroup>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_add_time_template"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="添加时间段"
        android:background="@drawable/select_register_btn"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_gravity="right"
        android:padding="7dp"
        android:layout_margin="8dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/bg_gray"/>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srl_save_template"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ScrollView
            android:id="@+id/scroll_save_template"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/bg_gray">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="新建模板"
                        android:padding="8dp"/>
                    <TextView
                        android:id="@+id/tv_save_template"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="保存模板"
                        android:textColor="@drawable/text_press_preview"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:layout_alignParentRight="true"
                        android:paddingRight="15dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:background="@color/bg_gray"/>
                <com.elin.elindriverschool.view.ScrollRecyclerView
                    android:id="@+id/rv_add_template"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:background="@color/bg_gray"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="已有模板"
                    android:background="@color/bg_gray"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:background="@color/bg_gray"/>
                <com.elin.elindriverschool.view.ScrollRecyclerView
                    android:id="@+id/rv_check_template"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </ScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>


</LinearLayout>
