<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.StudentOperationActivity">
    <include layout="@layout/custom_go_back"
        android:id="@+id/stu_title"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_stu_operation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/stu_title"
        android:layout_above="@+id/stu_submit"/>
    <Button
        android:id="@+id/stu_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="提  交"
        android:background="@drawable/btn_border_submit"
        android:textColor="@drawable/text_press"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>