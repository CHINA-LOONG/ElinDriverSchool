<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/line_color_gray"
    android:orientation="vertical">
    <include android:id="@+id/ll_forget_pwd_title"
        layout="@layout/custom_go_back"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/marginTop"
        >
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/marginTop"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_forget_pwd_phone"
            />
        <EditText
            android:id="@+id/edt_forget_pwd_phone"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="请输入手机号"
            android:textColorHint="@color/text_color_nomal"
            android:layout_marginLeft="@dimen/marginTop"
            android:textSize="@dimen/text_normal_size"
            android:inputType="phone"
            android:maxLength="11"
            android:textColor="@color/text_color_light_dark"
            />
    </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/line_color_gray"
            android:layout_marginLeft="@dimen/marginLeft"
            android:layout_marginRight="@dimen/marginLeft"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/marginTop"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_forget_pwd_user_info"
                />
            <EditText
                android:id="@+id/edt_forget_pwd_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="请输入账号"
                android:textColorHint="@color/text_color_nomal"
                android:layout_marginLeft="@dimen/marginTop"
                android:textSize="@dimen/text_normal_size"
                android:inputType="phone"
                android:maxLength="11"
                android:textColor="@color/text_color_light_dark"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/line_color_gray"
            android:layout_marginLeft="@dimen/marginLeft"
            android:layout_marginRight="@dimen/marginLeft"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/marginTop"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_forget_id_licence"
                />
            <EditText
                android:id="@+id/edt_forget_pwd_id_licence"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="请输入身份证号"
                android:textColorHint="@color/text_color_nomal"
                android:layout_marginLeft="@dimen/marginTop"
                android:textSize="@dimen/text_normal_size"
                android:inputType="phone"
                android:maxLength="11"
                android:textColor="@color/text_color_light_dark"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/line_color_gray"
            android:layout_marginLeft="@dimen/marginLeft"
            android:layout_marginRight="@dimen/marginLeft"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/marginTop"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_forget_pwd_new"
              />

            <EditText
                android:id="@+id/edt_forget_pwd_new_pwd"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="请输入新密码"
                android:textColorHint="@color/text_color_nomal"
                android:layout_marginLeft="@dimen/marginTop"
                android:textSize="@dimen/text_normal_size"
                android:inputType="phone"
                android:maxLength="11"
                android:textColor="@color/text_color_light_dark"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/line_color_gray"
            android:layout_marginLeft="@dimen/marginLeft"
            android:layout_marginRight="@dimen/marginLeft"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/marginTop"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_forget_pwd_confirm"
                />

            <EditText
                android:id="@+id/edt_forget_pwd_confirm"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="确认新密码"
                android:textColorHint="@color/text_color_nomal"
                android:layout_marginLeft="@dimen/marginTop"
                android:textSize="@dimen/text_normal_size"
                android:inputType="phone"
                android:maxLength="11"
                android:textColor="@color/text_color_light_dark"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>