<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dp_10"
    android:paddingBottom="@dimen/dp_10">
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1.6"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/item_iv_portrait"
            android:layout_width="60dp"
            android:layout_height="75dp"
            android:scaleType="fitXY"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:maxHeight="75dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/item_tv_name"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="詹姆哈哈"
            android:textColor="@color/text_color_nomal"
            android:textSize="@dimen/text_small_size"
            android:layout_marginBottom="@dimen/min_margin"/>
        <!--<LinearLayout-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_weight="3"-->
            <!--android:layout_height="match_parent"-->
            <!--android:orientation="horizontal">-->
            <!--<ImageView-->
                <!--android:id="@+id/item_iv_phone"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:src="@drawable/icon_stu_phone"-->
                <!--android:layout_marginLeft="5dp" />-->
            <TextView
                android:id="@+id/item_tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_small_size"
                android:textIsSelectable="true"
                android:layout_centerHorizontal="true"
                android:paddingLeft="@dimen/min_margin"
                android:drawablePadding="@dimen/min_margin"
                android:textColor="@color/text_color_nomal"
                android:drawableLeft="@drawable/icon_stu_phone"/>
        <!--</LinearLayout>-->
        <TextView
            android:id="@+id/item_tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_tv_name"
           android:layout_marginTop="@dimen/min_margin"/>
    </RelativeLayout>
</LinearLayout>