<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">
    <ImageView
        android:id="@+id/item_imv_stu_portrait"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:maxHeight="70dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:id="@+id/item_tv_stu_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="詹姆哈哈"
                android:textColor="@color/text_color_nomal"
                android:textSize="@dimen/text_small_size"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/item_imv_stu_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_stu_phone"
                    android:layout_marginLeft="5dp" />
                <TextView
                    android:id="@+id/item_tv_stu_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="371312198809208766"
                    android:textSize="@dimen/text_small_size"
                    android:gravity="end"
                    android:textIsSelectable="true"
                    android:textColor="@color/text_color_nomal"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_nomal"
                android:textSize="@dimen/text_small_size"
                android:text="所属教练员："
                />
            <TextView
                android:id="@+id/item_tv_coach_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_nomal"
                android:textSize="@dimen/text_small_size"
                android:text="小型车C1"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_nomal"
                android:textSize="@dimen/text_small_size"
                android:text="教练员电话：" />
            <TextView
                android:id="@+id/item_tv_coach_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_nomal"
                android:textSize="@dimen/text_small_size"
                android:text="小型车C1" />
            <ImageView
                android:id="@+id/item_imv_coach_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_stu_phone"
                android:layout_marginLeft="5dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>