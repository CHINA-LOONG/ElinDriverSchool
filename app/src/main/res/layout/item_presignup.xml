<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/marginTop"
    android:gravity="center_vertical">
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1.6"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/item_iv_portrait"
            android:layout_width="60dp"
            android:layout_height="75dp"
            android:scaleType="fitXY"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:maxHeight="75dp"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:id="@+id/item_tv_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="詹姆哈哈wwwwwwwww"
                android:textColor="@color/text_color_nomal"
                android:textSize="@dimen/text_small_size"
                android:maxEms="8"
                android:ellipsize="end"
                android:singleLine="true"/>
            <TextView
                android:id="@+id/item_tv_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="男"
                android:textColor="@color/text_color_nomal"
                android:textSize="@dimen/text_small_size"
                android:maxEms="2"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/item_iv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_stu_phone"
                    android:layout_marginLeft="5dp" />
                <TextView
                    android:id="@+id/item_tv_id_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="371312198809208766"
                    android:textSize="@dimen/text_small_size"
                    android:gravity="end"
                    android:textColor="@color/text_color_nomal"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_nomal"
                android:textSize="@dimen/text_small_size"
                android:text="预报名时间："
                />
            <TextView
                android:id="@+id/item_tv_signup_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_nomal"
                android:textSize="@dimen/text_small_size"
                android:text="2016-11-10"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_nomal"
                android:textSize="@dimen/text_small_size"
                android:text="申请准假车型："
                />
            <TextView
                android:id="@+id/item_tv_cartype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_nomal"
                android:textSize="@dimen/text_small_size"
                android:text="小型车C1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_nomal"
                android:textSize="@dimen/text_small_size"
                android:text="申请班别："
                />
            <TextView
                android:id="@+id/item_tv_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_nomal"
                android:textSize="@dimen/text_small_size"
                android:text="普通班"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_nomal"
                android:textSize="@dimen/text_small_size"
                android:text="备注："
                />
            <TextView
                android:id="@+id/item_tv_remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_nomal"
                android:textSize="@dimen/text_small_size"
                android:text="无"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/item_tv_del_stu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="删除"
            android:gravity="end"
            android:paddingRight="20dp"
            android:textSize="16sp"
            android:textColor="@drawable/text_press_preview"/>
    </LinearLayout>
</LinearLayout>