<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/marginTop"
    android:orientation="horizontal"
    >
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1.6"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/imv_stu_item_1_head"
            android:layout_width="60dp"
            android:layout_height="75dp"
            android:scaleType="fitXY"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:maxHeight="75dp"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_stu_item_1_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="詹姆哈哈"
                android:textColor="@color/text_color_nomal"
                android:textSize="@dimen/text_small_size"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/tv_stu_item_1_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_stu_phone"
                    android:layout_marginLeft="5dp" />
                <TextView
                    android:id="@+id/tv_stu_item_1_id_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="371312198809208766"
                    android:textSize="@dimen/text_small_size"
                    android:gravity="end"
                    android:textIsSelectable="true"
                    android:textColor="@color/text_color_nomal"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tv_stu_item_1_sign_up_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_nomal"
                android:textSize="@dimen/text_small_size"
                android:text="报名时间：2016-11-10"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_nomal"
                android:textSize="@dimen/text_small_size"
                android:text="申请准假车型："
                />
            <TextView
                android:id="@+id/tv_stu_item_1_car_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_nomal"
                android:textSize="@dimen/text_small_size"
                android:text="小型车C1"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>