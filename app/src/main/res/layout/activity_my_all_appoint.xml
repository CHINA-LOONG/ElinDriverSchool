<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.elin.elindriverschool.activity.MyAllAppointActivity">
    <include layout="@layout/custom_go_back"/>
    <com.elin.elindriverschool.view.MySwipeRefreshLayout
        android:id="@+id/srl_all_appoint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:foreground="@drawable/card_foreground"
                android:clickable="true"
                card_view:cardBackgroundColor="@android:color/white"
                card_view:cardCornerRadius="8dp"
                card_view:cardElevation="3dp"
                card_view:contentPadding="8dp"
                card_view:cardUseCompatPadding="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/marginLeft"
                        android:paddingRight="@dimen/marginLeft">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_color_nomal"
                            android:text="科目类型："
                            android:textSize="@dimen/text_small_size" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:background="@drawable/edit_shape"
                            android:orientation="horizontal">
                            <Spinner
                                android:id="@+id/sp_my_stu"
                                android:layout_width="200dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="5dp" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="6dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/marginLeft"
                        android:paddingRight="@dimen/marginLeft">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="日期选择："
                            android:textSize="@dimen/text_small_size" />
                        <LinearLayout
                            android:id="@+id/ll_my_stu_start_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_shape"
                            android:orientation="horizontal"
                            android:padding="@dimen/bottom_navigation_elevation"
                            android:gravity="center_vertical">
                            <TextView
                                android:id="@+id/tv_all_appoint_start_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="起始日期"
                                android:textSize="@dimen/text_small_size"
                                android:textColor="@color/text_color_nomal" />
                        </LinearLayout>
                        <View
                            android:layout_width="@dimen/marginLeft"
                            android:layout_height="@dimen/line_height"
                            android:background="@color/bg_gray"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            />
                        <LinearLayout
                            android:id="@+id/ll_my_stu_end_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_shape"
                            android:orientation="horizontal"
                            android:padding="@dimen/bottom_navigation_elevation"
                            android:gravity="center_vertical"
                            >
                            <TextView
                                android:id="@+id/tv_all_appoint_end_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="结束日期"
                                android:textSize="@dimen/text_small_size"
                                android:textColor="@color/text_color_nomal" />
                        </LinearLayout>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                            <TextView
                                android:id="@+id/tv_all_appoint_check"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:text="查询"
                                android:background="@drawable/select_register_btn"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:textSize="13sp"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"
                                android:padding="5dp" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_all_appoint"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </com.elin.elindriverschool.view.MySwipeRefreshLayout>
</LinearLayout>
