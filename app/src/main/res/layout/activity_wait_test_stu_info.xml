<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/line_color_gray"
    android:id="@+id/ll_wait_test_stu_info_container"
    android:orientation="vertical">

    <include android:id="@+id/ll_wait_test_stu_title"
        layout="@layout/custom_go_back"/>
    <com.elin.elindriverschool.view.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/marginLeft"
            android:text="学员信息"
            android:textColor="@color/text_color_nomal"
            android:textSize="@dimen/text_normal_size"
            />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/marginLeft"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="姓       名："
                        android:textColor="@color/text_color_light_dark"
                        android:textSize="@dimen/text_normal_size"
                        />
                    <TextView
                        android:id="@+id/tv_wait_test_stu_info_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="詹姆斯"
                        android:textColor="@color/text_color_nomal"
                        android:textSize="@dimen/text_normal_size"
                        android:layout_marginLeft="@dimen/marginTop"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:background="@color/line_color_gray"
                    android:layout_marginLeft="@dimen/marginTop"
                    android:layout_marginRight="@dimen/marginTop"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/marginLeft"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="身份证号："
                        android:textColor="@color/text_color_light_dark"
                        android:textSize="@dimen/text_normal_size"
                        />
                    <TextView
                        android:id="@+id/tv_wait_test_stu_info_id_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12344556677778"
                        android:textColor="@color/text_color_nomal"
                        android:textSize="@dimen/text_normal_size"
                        android:layout_marginLeft="@dimen/marginTop"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:background="@color/line_color_gray"
                    android:layout_marginLeft="@dimen/marginTop"
                    android:layout_marginRight="@dimen/marginTop"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/marginLeft"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="移动电话："
                        android:textColor="@color/text_color_light_dark"
                        android:textSize="@dimen/text_normal_size"
                        />
                    <TextView
                        android:id="@+id/tv_wait_test_stu_info_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1688988888"
                        android:textColor="@color/text_color_nomal"
                        android:textSize="@dimen/text_normal_size"
                        android:layout_marginLeft="@dimen/marginTop"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:background="@color/line_color_gray"
                    android:layout_marginLeft="@dimen/marginTop"
                    android:layout_marginRight="@dimen/marginTop"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/marginLeft"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="报名时间："
                        android:textColor="@color/text_color_light_dark"
                        android:textSize="@dimen/text_normal_size"
                        />
                    <TextView
                        android:id="@+id/tv_wait_test_stu_info_sign_up_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2016-10-19"
                        android:textColor="@color/text_color_nomal"
                        android:textSize="@dimen/text_normal_size"
                        android:layout_marginLeft="@dimen/marginTop"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:background="@color/line_color_gray"
                    android:layout_marginLeft="@dimen/marginTop"
                    android:layout_marginRight="@dimen/marginTop"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/marginLeft"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="申请车型："
                        android:textColor="@color/text_color_light_dark"
                        android:textSize="@dimen/text_normal_size"
                        />
                    <TextView
                        android:id="@+id/tv_wait_test_stu_info_car_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="小型车"
                        android:textColor="@color/text_color_nomal"
                        android:textSize="@dimen/text_normal_size"
                        android:layout_marginLeft="@dimen/marginTop"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:background="@color/line_color_gray"
                    android:layout_marginLeft="@dimen/marginTop"
                    android:layout_marginRight="@dimen/marginTop"/>
                <LinearLayout
                    android:id="@+id/ll_wait_test_wait_class"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/marginLeft"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:visibility="gone"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="待考科目："
                        android:textColor="@color/text_color_light_dark"
                        android:textSize="@dimen/text_normal_size"
                        />
                    <TextView
                        android:id="@+id/tv_wait_test_stu_info_wait_class"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="科目一"
                        android:textColor="@color/text_color_nomal"
                        android:textSize="@dimen/text_normal_size"
                        android:layout_marginLeft="@dimen/marginTop"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
            android:id="@+id/ll_wait_test_test_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/marginLeft"
                android:text="考试信息"
                android:textColor="@color/text_color_nomal"
                android:textSize="@dimen/text_normal_size"
                android:id="@+id/textView2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/marginLeft"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="预约科目："
                        android:textColor="@color/text_color_light_dark"
                        android:textSize="@dimen/text_normal_size"
                        />
                    <TextView
                        android:id="@+id/tv_wait_test_stu_info_pre_class"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="科目一"
                        android:textColor="@color/text_color_nomal"
                        android:textSize="@dimen/text_normal_size"
                        android:layout_marginLeft="@dimen/marginTop"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:background="@color/line_color_gray"
                    android:layout_marginLeft="@dimen/marginTop"
                    android:layout_marginRight="@dimen/marginTop"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/marginLeft"
                        android:orientation="horizontal"
                        >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="考试日期："
                        android:textColor="@color/text_color_light_dark"
                        android:textSize="@dimen/text_normal_size"
                        />
                    <TextView
                        android:id="@+id/tv_wait_test_stu_info_test_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2016-10-12"
                        android:textColor="@color/text_color_nomal"
                        android:textSize="@dimen/text_normal_size"
                        android:layout_marginLeft="@dimen/marginTop"
                        />
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/tv_wait_test_stu_info_change_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_normal_size"
                            android:textColor="@color/colorPrimary"
                            android:text="修改"
                            android:background="@drawable/text_shape_primary"
                            android:gravity="center"
                            android:layout_centerInParent="true"
                            android:paddingLeft="@dimen/marginLeft"
                            android:paddingRight="@dimen/marginLeft"
                            android:paddingTop="@dimen/paddingTop"
                            android:paddingBottom="@dimen/paddingTop"
                            />
                    </RelativeLayout>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:background="@color/line_color_gray"
                    android:layout_marginLeft="@dimen/marginTop"
                    android:layout_marginRight="@dimen/marginTop"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/marginLeft"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="考试场地："
                            android:textColor="@color/text_color_light_dark"
                            android:textSize="@dimen/text_normal_size"
                            />
                        <TextView
                            android:id="@+id/tv_wait_test_stu_info_test_site"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="临沂第一考场"
                            android:textColor="@color/text_color_nomal"
                            android:textSize="@dimen/text_normal_size"
                            android:layout_marginLeft="@dimen/marginTop"
                            />
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/tv_wait_test_stu_info_change_site"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_normal_size"
                            android:textColor="@color/colorPrimary"
                            android:text="修改"
                            android:background="@drawable/text_shape_primary"
                            android:gravity="center"
                            android:layout_centerInParent="true"
                            android:paddingLeft="@dimen/marginLeft"
                            android:paddingRight="@dimen/marginLeft"
                            android:paddingTop="@dimen/paddingTop"
                            android:paddingBottom="@dimen/paddingTop"
                            />
                    </RelativeLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:background="@color/line_color_gray"
                    android:layout_marginLeft="@dimen/marginTop"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/marginLeft"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="乘坐班车："
                        android:textColor="@color/text_color_light_dark"
                        android:textSize="@dimen/text_normal_size"
                        />
                    <TextView
                        android:id="@+id/tv_wait_test_stu_info_is_take_bus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="是"
                        android:textColor="@color/text_color_nomal"
                        android:textSize="@dimen/text_normal_size"
                        android:layout_marginLeft="@dimen/marginTop"
                        />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_small_size"
                android:text="提示：请核对学员信息，若有不符，请修改"
                android:layout_marginTop="30dp"
                android:textColor="@android:color/holo_orange_dark"
                android:gravity="center_horizontal"
                />

        </LinearLayout>
        </LinearLayout>
    </com.elin.elindriverschool.view.MyScrollView>

</LinearLayout>