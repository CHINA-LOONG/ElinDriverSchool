<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/press_relative"
    android:padding="@dimen/marginTop"
    android:orientation="horizontal"
    >
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1.6"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/imv_stu_item_check_score_head"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:maxHeight="75dp"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="6"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/marginLeft"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_stu_item_check_score_name"
                android:layout_width="0dp"
                android:layout_weight="1.1"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_nomal"
                android:textSize="@dimen/text_small_size"
                />
            <RelativeLayout
                android:id="@+id/rl_stu_item_check_score_phone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_stu_phone"
                />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tv_stu_item_check_score_id_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_small_size"
                    android:gravity="end"
                    android:textColor="@color/text_color_nomal"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_nomal"
                android:textSize="@dimen/text_small_size"
                android:text="考试时间："
                />
            <TextView
                android:id="@+id/tv_stu_item_check_score_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_nomal"
                android:textSize="@dimen/text_small_size"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_nomal"
                android:textSize="@dimen/text_small_size"
                android:text="考试科目："
                />
            <TextView
                android:id="@+id/tv_stu_item_check_score_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_nomal"
                android:textSize="@dimen/text_small_size"
                android:text="科目一"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="end|center_vertical"
                >

                <TextView
                    android:id="@+id/tv_stu_item_check_score_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_small_size"
                    android:textColor="@color/colorPrimary"
                    android:text="合格"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>