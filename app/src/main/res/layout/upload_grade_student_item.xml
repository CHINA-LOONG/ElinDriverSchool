<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/marginTop"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants"
    >

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1.6"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/imv_upload_grade_stu_head"
            android:layout_width="60dp"
            android:layout_height="75dp"
            android:scaleType="fitXY"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:maxHeight="75dp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/marginLeft"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_upload_grade_stu_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_nomal"
                android:textSize="@dimen/text_small_size"
                />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/tv_upload_grade_stu_id_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_mini_size"
                    android:gravity="end"
                    android:textColor="@color/text_color_nomal"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号："
                android:textSize="@dimen/text_small_size"
                android:textColor="@color/text_color_nomal"
                />
            <TextView
                android:id="@+id/tv_upload_grade_stu_phone"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_small_size"
                android:textColor="@color/text_color_nomal"
                />
            <ImageView
                android:id="@+id/imv_upload_grade_stu_item_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_stu_phone"
                android:layout_marginRight="@dimen/marginTop"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_nomal"
                android:textSize="@dimen/text_small_size"
                android:text="考试时间："
                />
            <TextView
                android:id="@+id/tv_upload_grade_stu_sign_up_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_nomal"
                android:textSize="@dimen/text_small_size"
                android:text=""
                />
        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:layout_height="match_parent"
        android:id="@+id/item_rela_uploadgrade"
        android:visibility="gone">
        <CheckBox
            android:id="@+id/cb_upload_grade_stu_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/check_box_selector"
            android:button="@null"
            />
    </RelativeLayout>
    <ImageView
        android:id="@+id/item_uploadgrade_appointing"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/icon_auditing" />


</LinearLayout>