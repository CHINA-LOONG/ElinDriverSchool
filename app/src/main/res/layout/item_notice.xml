<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="12dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:id="@+id/item_ll_notice"
    android:background="@drawable/select_relative"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/paddingTop">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/item_tv_notice_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_normal_size"
                android:text="考试通知"
                android:maxEms="8"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_centerHorizontal="true"
                android:textColor="@drawable/select_tv"
                android:duplicateParentState="true"/>
            <TextView
                android:id="@+id/item_tv_check_stu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看学员"
                android:textColor="@drawable/text_press_preview"
                android:layout_alignParentRight="true"
                android:paddingRight="10dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/item_tv_notice_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="自学驾驶所用自备车辆，不得用于经营性的驾驶学习活动。"
                android:singleLine="true"
                android:ellipsize="end"
                android:duplicateParentState="true"
                android:textColor="@drawable/select_tv"
                android:layout_toLeftOf="@+id/item_tv_notice_count"
                android:layout_marginRight="8dp"/>

            <TextView
                android:id="@+id/item_tv_notice_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="@drawable/tv_notice_count"
                android:text="11"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textColor="@color/white"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/item_tv_notice_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:paddingRight="8dp"
            android:textColor="@drawable/select_tv"
            android:duplicateParentState="true"/>
    </LinearLayout>
</LinearLayout>